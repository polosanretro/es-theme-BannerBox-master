<theme>
<formatVersion>7</formatVersion>


	<view name="system">


	<image name="label" extra="true">
	<visible>false</visible>
	</image>

	<image name="label_alt" extra="true">
        <linearSmooth>true</linearSmooth>
        <path>./gamebar.png</path>
	<x>0.5</x>
	<y>0.5</y>
	<maxSize>1 1.4</maxSize>
	<origin>0.5 0.5</origin>
	<zIndex>2000</zIndex>
	<storyboard>
		<animation property="x" from="-2" to="-2" begin="0" duration="350" mode="linear"/>
        <animation property="x" from="-2" to="0.5" begin="350" duration="1800" mode="linear"/>
        <animation property="colorEnd" from="00000000" to="10101099" begin="1400" duration="800" mode="linear"/>
        <animation property="x" from="0.5" to="2" begin="7400" duration="600" mode="linear"/>
        <animation property="color" from="10101099" to="00000000" begin="7100" duration="300" mode="linear"/>

	</storyboard>
	</image>

	<image name="label_alt" extra="true" ifSubset="screen ratio:43">
	<pos>0.5 0.5</pos>
	</image>
	
	<text name="label_text" extra="true">
	<fontSize>0.018</fontSize>
	<fontPath>./../adventure.otf</fontPath>
        <alignment>center</alignment>
	<color>ffffff</color>
	<glowColor>000000</glowColor>
	<glowSize>2</glowSize>
	<glowOffset>1</glowOffset>
	<x>0.5</x>
	<y>0.040</y>		
	<zIndex>2001</zIndex>
	</text>
	
	<text name="label_text" extra="true" ifSubset="screen ratio:43">
	<y>0.040</y>
	</text>

</view>
	
</theme>
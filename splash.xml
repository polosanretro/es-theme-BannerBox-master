<?xml version="1.0" encoding="UTF-8"?>



<theme>
	<formatVersion>7</formatVersion>
	<include subset="colorset" name="Blue" displayName="${blue}">./media/colors/blue.xml</include>
	<include subset="colorset" name="Red" displayName="${red}">./media/colors/red.xml</include>
	<include subset="colorset" name="Green" displayName="${green}">./media/colors/green.xml</include>
	<include subset="colorset" name="Yellow" displayName="${yellow}">./media/colors/yellow.xml</include>
	<include subset="colorset" name="Violet" displayName="${violet}">./media/colors/violet.xml</include>
	<include subset="colorset" name="Cyan" displayName="${cyan}">./media/colors/cyan.xml</include>
	<include subset="colorset" name="Orange" displayName="${orange}">./media/colors/orange.xml</include>

<view name="splash">
		<splash name="splash">
			<backgroundColor>161616</backgroundColor>
		</splash>
		<image name="background">
			<path>./media/splash.jpg</path>
		</image>

		<image name="progressbarbg" extra="true">
			<color>00abff</color>
			<colorEnd>330099</colorEnd>
			<zIndex>5</zIndex>
		</image>


		<image name="progressbar">
			<color>ffffff33</color>
			<colorEnd>ffffff33</colorEnd>
			</image>
		
		<image name="progressbar:active">
			<color>00abff</color>
			<colorEnd>00abff</colorEnd>
			<zIndex>7</zIndex>
		</image>
		
		<text name="label">
			<color>FFFFFFFF</color>
			<origin>0.5 0.5</origin>
			<alignment>center</alignment>
			<fontPath>./media/images/Circular Std Black.ttf</fontPath>
			<pos>0.5 0.96</pos>
			<fontSize>0.028</fontSize>
			<color>d9d9d9</color>
			<glowColor>00000018</glowColor>
			<glowSize>0</glowSize>
			<glowOffset>0</glowOffset>
		</text>
	</view>
</theme>